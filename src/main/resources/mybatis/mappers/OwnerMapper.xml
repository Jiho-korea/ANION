<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="petProject.dao.OwnerDAO">
    <select id="selectByIdPassword" parameterType="loginRequest" resultType="owner">
    	SELECT "OWNER_ID","OWNER_PASSWORD","OWNER_NAME", "OWNER_PHONE_NUMBER","OWNER_REGISTRATION_DATE", "MEMBER_LEVEL" 
    	FROM "owner" WHERE "OWNER_ID" = #{loginRequest.id} AND "OWNER_PASSWORD" = #{loginRequest.password}
    </select>
    
    <select id="selectById" parameterType="String" resultType="int">
    	SELECT count(*) FROM "owner" WHERE "OWNER_ID" = #{ownerId}
    </select>
    
    <insert id="insertOwner" parameterType="ownerRegisterRequest">
    	INSERT INTO "public"."owner" ("OWNER_ID", "OWNER_PASSWORD","OWNER_NAME", "OWNER_PHONE_NUMBER","OWNER_REGISTRATION_DATE")
    	VALUES (#{ownerRegisterRequest.ownerId}, #{ownerRegisterRequest.ownerPassword},#{ownerRegisterRequest.ownerName},#{ownerRegisterRequest.ownerPhoneNumber},now());
    </insert>
    
    <select id="selectOwnerList" resultMap="ownerResultMap">
    	select "OWNER_ID", "OWNER_NAME", "OWNER_PHONE_NUMBER", "OWNER_REGISTRATION_DATE", "MEMBER_LEVEL" from "public"."owner" 
    </select>
    
     <resultMap type="owner" id="ownerResultMap">
		<id column="OWNER_ID" property="ownerId" />
		<result column="OWNER_NAME" property="ownerName" />
		<result column="OWNER_PHONE_NUMBER" property="ownerPhoneNumber" />
		<result column="OWNER_REGISTRATION_DATE" property="ownerRegisterDate" />
		<result column="MEMBER_LEVEL" property="memberLevel" />
	</resultMap>
</mapper>
