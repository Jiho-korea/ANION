<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="petProject.dao.ImageDAO">
	<insert id="insertImage" parameterType="imageUploadRequest">
		INSERT INTO public.image
		("PET_REGISTRATION_NUMBER", "IMAGE_PATH", "MEMBER_NUMBER")
		VALUES(#{imageUploadRequest.petRegistrationNumber}, #{imageUploadRequest.imagePath}, #{imageUploadRequest.memberNumber});
	</insert>
	
	
	<delete id="deleteImage">
	   delete from public.image where "IMAGE_PATH" = #{imagePath}
	</delete>
	
	<select id="selectImageList" parameterType="int" resultMap="imageResultMap">
    	select "PET_REGISTRATION_NUMBER", "IMAGE_NUMBER", "MEMBER_NUMBER", "IMAGE_PATH" from "public"."image" where "PET_REGISTRATION_NUMBER"= #{petRegistrationNumber} ORDER BY "IMAGE_NUMBER" DESC
    </select>
    
    <select id="selectImageCount" resultType="int">
		SELECT count(*) FROM image
	</select>
    
    <resultMap type="image" id="imageResultMap">
		<id column="PET_REGISTRATION_NUMBER" property="petRegistrationNumber" />
		<id column="IMAGE_NUMBER" property="imageNumber" />
		<result column="MEMBER_NUMBER" property="memberNumber" />
		<result column="IMAGE_PATH" property="imagePath" />
	</resultMap>
</mapper>
