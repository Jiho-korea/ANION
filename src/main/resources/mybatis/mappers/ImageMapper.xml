<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="petProject.dao.ImageDAO">
	<insert id="insertImage" parameterType="imageUploadRequest">
		INSERT INTO public.image
		("PET_REGISTRATION_NUMBER", "IMAGE_PATH", "MEMBER_ID")
		VALUES(#{imageUploadRequest.petRegistrationNumber}, #{imageUploadRequest.imagePath}, #{imageUploadRequest.memberId});
	</insert>
	
	<select id="selectImageList" parameterType="int" resultMap="imageResultMap">
    	select * from "public"."image" where "PET_REGISTRATION_NUMBER"= #{petRegistrationNumber} ORDER BY "IMAGE_NUMBER" DESC
    </select>
    
    <resultMap type="image" id="imageResultMap">
		<id column="PET_REGISTRATION_NUMBER" property="petRegistrationNumber" />
		<id column="IMAGE_NUMBER" property="imageNumber" />
		<result column="MEMBER_ID" property="memberId" />
		<result column="IMAGE_PATH" property="imagePath" />
	</resultMap>
</mapper>
